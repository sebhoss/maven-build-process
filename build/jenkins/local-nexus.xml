<settings>
  <servers>
    <server>
      <id>local-nexus</id>
      <username>admin</username>
      <password>admin123</password>
    </server>
  </servers>
  <profiles>
    <profile>
      <id>release-into-local-nexus</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <staging-id>local-nexus</staging-id>
        <staging-url>http://local-nexus:8081/content/repositories/snapshots</staging-url>
        <release-id>local-nexus</release-id>
        <release-url>http://local-nexus:8081/content/repositories/releases</release-url>
        <nexus-url>http://local-nexus:8081/</nexus-url>
      </properties>
      <repositories>
        <repository>
          <id>local-nexus</id>
          <name>Local Nexus</name>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
            <checksumPolicy>fail</checksumPolicy>
          </snapshots>
          <url>http://local-nexus:8081/content/groups/public</url>
          <layout>default</layout>
        </repository>
      </repositories>
    </profile>
  </profiles>
  <mirrors>
    <mirror>
      <mirrorOf>*</mirrorOf>
      <name>local-nexus</name>
      <url>http://local-nexus:8081/content/groups/public/</url>
      <id>local-nexus</id>
    </mirror>
  </mirrors>
</settings>
